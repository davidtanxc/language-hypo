/* Progress bar */


.progressbar{
  width: 100%;
  margin-top: 20px;

  @media (max-width: 979px) {
    display:none
  }
  ul{
    display:block;
    list-style-type:none;
    margin: 0px;
  
    li {
      float:left;
      width:25%;
      height: 80px;
      position:relative;
      box-sizing: border-box;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      -ms-box-sizing: border-box;
      &:nth-child(1) {
        border-top-left-radius: 8px;
      }
      &:nth-child(4) {
        border-top-right-radius: 8px;
      }

      .step-text {
        float:left;
        width: 70%;
        margin: 16px 24px;
      
        .step{
          background-color: $purple;
          font-size: 2em;
          width: 40px;
          height: 40px;
          @include rounded(50%);
          float: left;
          text-align: center;
          line-height: 1.3em;
          color: white;
          margin-right: 12px;
          margin-left: 20px;
          border: 4px solid white;
          &:nth-child(1) {
            margin-left: 0px;
          }
        }
        .step-desc{
          font-size: 1.1em;
          line-height: 1.1em;
          padding-top: 8px;
        }
      }
    }
      
    li.done{
      background-color: lighten($purple, 60%);

      .arrow{
        border-left: 10px solid lighten($purple, 60%);
        width: 0; 
        height: 0; 
        border-top: 40px solid lighten($purple, 40%);
        border-bottom: 40px solid lighten($purple, 40%);
        float:left;
      }

      .step{
        background-color: lighten($purple, 60%);
      }

      .step-desc{
        color:grey;
      }
    }

    li.current {
      background-color: lighten($purple, 40%);

      .arrow, .arrow-thin {
        border-left: 10px solid lighten($purple, 60%);
        width: 0; 
        height: 0; 
      }
      .arrow {
        border-top: 40px solid lighten($purple, 40%);
        border-bottom: 40px solid lighten($purple, 40%);
      }

      .arrow-thin {
        border-top: 30px solid lighten($purple, 40%);
        border-bottom: 30px solid lighten($purple, 40%);
      }

      .step-desc{
        color:#4c4c4c;
      }

      .step-desc.thinner{
        color:black;
        font-size: 16px;
      }
    }
    li.thinner {
      height: 60px;
      .step-text {
        width: 90%;
        display:block;
        margin: 16px auto;
      }
      .step-desc {
        text-align: center;
        padding-top: 6px;
        a {
          font-size: 15px;
          color:#4c4c4c;
        }
      }
    }
    li.todo{
      background-color: #B6B6B4;
      .step{
        background-color: darken(#B6B6B4, 20%);
      }

      .arrow{
        border-left: 10px solid lighten($purple, 40%);
        width: 0; 
        height: 0; 
        border-top: 40px solid #B6B6B4;
        border-bottom: 40px solid #B6B6B4;
      }

      .step-desc{
        color:#eee;
      }
    }
  }
}

