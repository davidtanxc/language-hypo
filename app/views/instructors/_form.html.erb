<%= form_for @instructor, :html => { :multipart => true } do |f| %>
  <% if @instructor.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@instructor.errors.count, "field") %> missing on this form:</p>

      <ul>
      <% @instructor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :second_avatar %><br>
    <%= f.file_field :second_avatar %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
