<%= simple_form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@user.errors.count, "field") %> missing on this form:</p>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :full_name, input_html: { class: 'span12' } %>
  <%= f.input :email, label: "Email Address", input_html: { class: 'span12' }  %>
  <%= f.input :phone_number, input_html: { class: 'span12' }  %>

  <% if request.path == "/learn-chinese-in-singapore" %>
    <%= f.input :topics, :as => :hidden, :input_html => { :value => "Chinese" } %>
  <% elsif request.path == "/english-course-in-singapore" %>
    <%= f.input :topics, :as => :hidden, :input_html => { :value => "English" } %>
  <% elsif request.path == "/learn-korean-in-singapore" %>
    <%= f.input :topics, :as => :hidden, :input_html => { :value => "Korean" } %>
  <% elsif request.path == "/learn-french-in-singapore" %>
    <%= f.input :topics, :as => :hidden, :input_html => { :value => "French" } %>
  <% else %>
    <%= f.input :topics, :as => :hidden, :input_html => { :value => "Chinese" } %>
  <% end %>
  
